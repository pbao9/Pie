<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginwphone"
    tools:context=".GUI.LoginActivity">
    <TextView
        android:id="@+id/back"
        android:drawableLeft="@drawable/ic_back"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="55sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtText"
        android:text="Đăng Nhập"
        android:layout_toRightOf="@id/back"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:fontFamily="@font/bevietnampro_bold"
        android:layout_width="match_parent"
        android:layout_marginRight="35dp"
        android:layout_marginTop="55sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Pie"
        android:layout_below="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pie"
        android:textSize="120sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/colonnamt"/>
    <TextView
        android:id="@+id/txtDesc"
        android:layout_below="@+id/Pie"
        android:text="Siêu ứng dụng đáp ứng mọi nhu cầu \n hằng ngày"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textAlignment="center"
        android:fontFamily="@font/bevietnampro_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_below="@+id/txtDesc"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/coffee"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/btnPhoneLogin"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/ic__phone"
        android:fontFamily="@font/bevietnampro_bold"
        android:text="Tiếp tục với số điện thoại"
        android:textAlignment="center"
        android:textColor="#000000" />

</RelativeLayout>